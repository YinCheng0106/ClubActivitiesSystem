@model ClubActivitiesSystem.Models.RegisterViewModel

@{
  ViewData[index: "Title"] = "註冊";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Account" asp-action="Register" method="post">

  <div asp-validation-summary="All" class="text-danger"></div>

  <div class="form-group">
    <label asp-for="Email">帳號</label>
    <input asp-for="Email" class="form-control" placeholder="Email" />
    <span asp-validation-for="Email" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Password">密碼</label>
    <input asp-for="Password" class="form-control" placeholder="Password" />
    <span asp-validation-for="Password" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="ConfirmPassword">確認密碼</label>
    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
  </div>

  <button type="submit" class="btn btn-primary">註冊</button>
</form>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}