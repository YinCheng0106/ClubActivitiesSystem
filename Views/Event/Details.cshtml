@using System.Security.Claims
@using ClubActivitiesSystem.Models.Entities
@model Event

@{
    ViewData["Title"] = "活動詳情";
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var isOwnerOrAdmin = (Model.CreatedBy == currentUserId) || User.IsInRole("Admin");
}

<partial name="_FlashMessage" />

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@Model.Title</h2>
    <div class="d-flex gap-2">
        <a asp-action="Index" class="btn btn-outline-secondary">返回列表</a>
        @if (isOwnerOrAdmin)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">編輯</a>
            <a asp-action="RegistrationList" asp-route-eventId="@Model.Id" class="btn btn-outline-secondary">報名列表</a>
        }
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">社團</dt>
            <dd class="col-sm-10">@Model.Club?.ClubName</dd>

            <dt class="col-sm-2">地點</dt>
            <dd class="col-sm-10">@Model.Location</dd>

            <dt class="col-sm-2">時間</dt>
            <dd class="col-sm-10">
                @Model.StartTime.ToLocalTime().ToString("yyyy/MM/dd HH:mm") ~
                @Model.EndTime.ToLocalTime().ToString("yyyy/MM/dd HH:mm")
            </dd>

            <dt class="col-sm-2">狀態</dt>
            <dd class="col-sm-10"><span class="badge bg-secondary">@Model.Status</span></dd>

            <dt class="col-sm-2">建立者</dt>
            <dd class="col-sm-10">@Model.CreatedByUser?.Name (@Model.CreatedBy)</dd>

            <dt class="col-sm-2">建立時間</dt>
            <dd class="col-sm-10">@Model.CreatedAt.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</dd>
        </dl>

        <hr />
        <h5>活動介紹</h5>
        <p class="mb-0">@Model.Description</p>
    </div>
</div>

@if (User.Identity?.IsAuthenticated ?? false)
{
    <div class="d-flex gap-2">
        <form asp-action="Register" asp-route-eventId="@Model.Id" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-primary">我要報名</button>
        </form>

        <form asp-action="CancelRegistration" asp-route-eventId="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('確定要取消報名嗎？');">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-danger">取消報名</button>
        </form>
    </div>
}
else
{
    <div class="alert alert-info">請先登入以報名活動。</div>
}
